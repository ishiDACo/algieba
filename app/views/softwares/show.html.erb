<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @software.name %>
        </h3>
      </div>
      <div class="panel-body">
        <p>
          <%= @software.description %>
        </p>
        <div class="clearfix">
          <div class="pull-left">
            <h4>Data functions</h4>
          </div>
          <div class="pull-right">
            <%= link_to(new_software_data_function_url(@software), class: 'btn btn-primary', remote: true) do %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
          </div>
        </div>
        <p>
          <%= render :partial => "data_functions_table" %>
        </p>
        <h4>Transactional functions</h4>
        <p>
        </p>
      </div>
    </div>
    <%= link_to 'Edit', edit_software_path(@software) %> |
    <%= link_to 'Back', root_url %>
  </div>
</div>
